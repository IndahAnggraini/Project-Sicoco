<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_top_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/judul"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background"
        android:ems="10"
        android:textColor="@color/black"
        android:text="Cooachingku"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:backgroundTint="@color/birugelap" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvieww"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/bg_top_radius"
        android:backgroundTint="@color/biruterang"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_top_radius"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/judul"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/judulmateri3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/bg_top_radius"
                android:backgroundTint="@color/biruterang"
                android:text="Pelatihan "
                android:textSize="25sp"
                android:textAlignment="center"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="Tanggal "
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=":"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/isitanggal3"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pukul"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="Pukul "
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=":"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/isipukul3"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tempat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="Tempat "
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/dot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text=":"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/isitempat3"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/label3"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:textColor="@color/black"

        android:textSize="20sp"
        android:padding="30dp"

        android:background="@drawable/background"
        android:backgroundTint="@color/biruterang"/>


    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/pdf"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:textColor="@color/black"

        android:textSize="20sp"
        android:padding="30dp"

        android:background="@drawable/background"
        android:backgroundTint="@color/biruterang"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="317dp"
        android:layout_below="@id/link"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_top_radius"
        android:ems="10"
        android:textColor="@color/black"
        android:text="*Harap hadir tepat waktu"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:backgroundTint="@color/biruterang"
        />


</LinearLayout>